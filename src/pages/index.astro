---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Slider puzzle Inicio">
  <div id="contSlider">
    <label for="default-range">Tamaño de juego:<p id="numero">3</p></label>
    <input id="default-range" type="range" min="3" max="9" value="3" />
  </div>
  <script>
    const rangeInput = document.getElementById(
      "default-range"
    ) as HTMLInputElement;
    const numero = document.getElementById("numero");
    rangeInput.value = localStorage.getItem("rangeMatriz") ?? "3";
    numero.textContent = localStorage.getItem("rangeMatriz") ?? "3";
    rangeInput.addEventListener("change", function () {
      numero.textContent = rangeInput.value;
      localStorage.setItem("rangeMatriz", rangeInput.value);
    });
  </script>
</Layout>

<style>
  #contSlider {
    width: 85%;
    align-self: center;
  }
  /* Estilos para el input de tipo range */
  input[type="range"] {
    /* Estilos específicos */
    width: 100%; /* Ancho completo */
    height: 10px; /* Altura de la barra */
    background-color: #ccc; /* Color de fondo */
    border-radius: 10px; /* Borde redondeado */
    appearance: none; /* Eliminar estilos predeterminados */
    cursor: pointer; /* Cursor de apuntador */
  }

  /* Cambiar el color del input cuando está activo */
  input[type="range"]:active,
  input[type="range"]:focus {
    outline: none; /* Eliminar el contorno */
  }

  /* Cambiar el color de la barra al ser manipulada */
  input[type="range"]::-webkit-slider-thumb {
    background-color: #3336c9; /* Color del botón de deslizamiento */
    width: 25px; /* Ancho del botón */
    height: 25px; /* Altura del botón */
    border-radius: 50%; /* Borde redondeado para que sea circular */
    cursor: pointer; /* Cursor de apuntador */
  }
</style>
